<p id="notice"><%= notice %><b style="float: right;margin-right: 0%;color: #2E2F30">Welcome <%= @user.first_name %> <%= @user.last_name %></b></p>
<br>
<p style="float: right;margin-right: 0%"><%= link_to 'Edit your profile', edit_user_path(@user) %></p>
<br><br>
<div class="search">
  <%= render 'form1' %>
  <table>
    <thead>
    <tr>
      <th>Licence no</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Style</th>
      <th>Hourly rate</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @x.each do |car| %>
        <tr>
          <td><%= car.licence_no %></td>
          <td><%= car.manufacturer %></td>
          <td><%= car.model %></td>
          <td><%= car.style %></td>
          <td><%= car.hourly_rate %></td>
          <td><%= car.location %></td>
          <td><%= car.status %></td>
          <td><%= link_to 'Show', car %></td>
          <% if(car.status == "available"); %>
          <td><%= link_to 'Reserve', car %></td>
          <td><%= link_to 'Check out', car %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
