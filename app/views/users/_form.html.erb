<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email, :placeholder => "Email" %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :user_first_name, :placeholder => "First Name" %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :user_last_name, :placeholder => "Last Name" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, :placeholder => "Password" %>
  </div>

 <!-- <div class="field">
   <%= form.label :role_id %>
   <%= form.text_field :role_id, id: :user_role_id %>
  </div> -->

  <div class="actions">
    <%= form.submit "SignUp", class: "btn-submit" %>
  </div>
<% end %>
