<p id="notice"><%= notice %></p>
<br>
<h4>Suggested Cars</h4>

<table class="table">
  <thead>
    <tr>
      <th>Suggesting User</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Style</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggested_cars.each do |suggested_car| %>
      <tr>
        <td><%= suggested_car.user_name %></td>
        <td><%= suggested_car.manufacturer %></td>
        <td><%= suggested_car.model %></td>
        <td><%= suggested_car.style.humanize %></td>
        <td><%= suggested_car.location %></td>
        <td><%= link_to 'Make a Decision', suggested_car %></td>
      </tr>
    <% end %>
  </tbody>
</table>
