<%= form_with(model: suggested_car, local: true) do |form| %>
  <% if suggested_car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(suggested_car.errors.count, "error") %> prohibited this suggested_car from being saved:</h2>

      <ul>
      <% suggested_car.errors.full_messages.each do |message| %>
        <% if message = "Manufacturer has already been taken" %>
          <li><%= "A car with same manufacturer and model has already been suggested." %></li>
        <% else %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer, id: :suggested_car_manufacturer %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, id: :suggested_car_model %>
  </div>

  <div class="field">
    <%= form.label :style %>
    <%= form.select :style, SuggestedCar.styles.values, id: :suggested_car_style %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :suggested_car_location %>
  </div>

    <div class="actions">
      <%= form.submit "Submit Suggestion", class: 'btn-submit' %>
    </div>
<% end %>
