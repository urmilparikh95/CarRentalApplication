<%= form_for(@suggested_car) do |form| %>

    <div class="field">
      <%= form.label :manufacturer %>
      <%= form.text_field :manufacturer, id: :car_manufacturer, :readonly => true %>
    </div>

    <div class="field">
      <%= form.label :model %>
      <%= form.text_field :model, id: :car_model, :readonly => true %>
    </div>

    <div class="field">
      <%= form.label :style %>
      <%= form.text_field :style, id: :car_style, :readonly => true %>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location, id: :car_location, :readonly => true %>
    </div>

 <div class="actions">
  <%= form.submit 'Reject', class: 'btn-submit' %>
 </div>
<% end %>
