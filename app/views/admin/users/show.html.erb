<h2><%= @user.role.name %></h2>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>


<% if @user.customer? %>
    <%= link_to 'Reservation History', admin_user_reservation_history_path(@user) %> |
    <%= link_to 'Edit', edit_admin_user_path(@user) %>
    <br><br>
    <%= link_to 'Back', admin_customers_path %>
<% end %>
<% if @user.admin? %>
<%= link_to 'Back', admin_users_path %>
<% end %>